<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">


    <batch:job id="userJob" job-repository="userRepository">
        <batch:step id="userStep">
            <batch:tasklet>
                <batch:chunk reader="userReader" processor="userProcessor" writer="userWriter" commit-interval="2"/>
            </batch:tasklet>
        </batch:step>
    </batch:job>

    <bean id="userRepository" class="org.springframework.batch.core.repository.support.JobRepositoryFactoryBean">
        <property name="dataSource" ref="dataSource"/>
    </bean>


    <bean id="userReader" class="com.kither.reader.UserReader"/>

    <bean id="userProcessor" class="com.kither.processor.UserProcessor"/>

    <bean id="userWriter" class="com.kither.writer.UserWriter"/>
</beans>